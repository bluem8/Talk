<Window x:Class="TalkClient.Windows.UnconnectedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalkClient.Windows"
        mc:Ignorable="d"
        Title="UnconnectedWindow" Height="132.353" Width="188.39">
    <Grid>
        <Button Content="Connect" Margin="11,67,9,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.456"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox Name="AddressTextbox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="192.168.0.7" VerticalAlignment="Top" Width="99"/>
        <TextBox Name="PortTextbox" HorizontalAlignment="Left" Height="23" Margin="114,10,0,0" TextWrapping="Wrap" Text="4567" VerticalAlignment="Top" Width="56"/>
        <TextBox Name="UsernameTextbox" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Gamer" VerticalAlignment="Top" Width="160"/>
    </Grid>
</Window>
